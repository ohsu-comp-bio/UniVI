{
  "data": {
    "modalities": [
      {
        "name": "rna",
        "h5ad_path": "../data/10x_Multiome_RNA_data.h5ad",
        "layer": "scaled",
        "X_key": "X",
        "encoder_hidden": [1024, 512],
        "decoder_hidden": [512, 1024],
        "likelihood": "gaussian"
      },
      {
        "name": "adt",
        "layer": "scaled",
        "X_key": "X",
        "encoder_hidden": [128, 64],
        "decoder_hidden": [64, 128],
        "likelihood": "gaussian"
      },
      {
        "name": "atac",
        "layer": "scaled",
        "X_key": "X_lsi",
        "encoder_hidden": [256, 128],
        "decoder_hidden": [128, 256],
        "likelihood": "gaussian",
      }
    ]
  },
  "model": {
    "loss_mode": "v1",
    "v1_recon": "cross",
    "normalize_v1_terms": true,

    "latent_dim": 140,
    "hidden_dims_default": [256, 128],
    "encoder_dropout": 0.1,
    "encoder_batchnorm": true,
    "decoder_dropout": 0.0,
    "decoder_batchnorm": false,
    "batchnorm": true,

    "beta": 80.0,
    "gamma": 120.0,

    "kl_anneal_start": 0,
    "kl_anneal_end": 25,
    "align_anneal_start": 0,
    "align_anneal_end": 25
  },
  "training": {
    "seed": 42,
    "train_fraction": 0.8,
    "batch_size": 256,
    "num_workers": 0,

    "n_epochs": 2000,
    "lr": 0.001,
    "weight_decay": 0.0001,
    "grad_clip": 5.0,
    "device": "cuda",
    "log_every": 20,

    "early_stopping": true,
    "patience": 30,
    "min_delta": 0.0,

    "mixed_precision": false,
    "grad_accum_steps": 1
  },
  "output": {
    "dir": "../univi_runs/tea-seq_default_UniVI_v1_scaled_gaussian",
    "save_best": true,
    "save_every": 0
  }
}
