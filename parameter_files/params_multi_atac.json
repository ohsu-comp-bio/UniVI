{
  "experiment_name": "multiome_rna_atac",

  "latent_dim": 20,
  "mixture_of_experts": true,

  "beta_kl": 1.0,
  "gamma_align": 10.0,
  "n_mc_samples": 1,

  "modalities": {
    "rna": {
      "input_dim": 2000,
      "likelihood": "nb",
      "encoder_hidden": [512, 256],
      "decoder_hidden": [256, 512]
    },
    "atac": {
      "input_dim": 4000,
      "likelihood": "bernoulli",
      "encoder_hidden": [512, 256],
      "decoder_hidden": [256, 512]
    }
  },

  "training": {
    "n_epochs": 400,
    "batch_size": 256,
    "learning_rate": 0.001,
    "weight_decay": 1e-6,

    "train_fraction": 0.8,
    "val_fraction": 0.1,

    "early_stopping": {
      "patience": 20,
      "min_delta": 0.0
    },

    "seed": 42,
    "use_cuda": true
  }
}
