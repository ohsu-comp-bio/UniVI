{
  "experiment_name": "adt_unimodal_hao",

  "latent_dim": 20,
  "mixture_of_experts": false,

  "beta_kl": 1.0,
  "gamma_align": 0.0,
  "n_mc_samples": 1,

  "modalities": {
    "adt": {
      "input_dim": 224,
      "likelihood": "nb",
      "encoder_hidden": [256, 128],
      "decoder_hidden": [128, 256]
    }
  },

  "training": {
    "n_epochs": 400,
    "batch_size": 256,
    "learning_rate": 0.001,
    "weight_decay": 1e-6,

    "train_fraction": 0.8,
    "val_fraction": 0.1,

    "early_stopping": {
      "patience": 20,
      "min_delta": 0.0
    },

    "seed": 42,
    "use_cuda": true
  }
}
